extends layout

block content

  div.container

    h1(id='content') #{page_title}

    div.container.courses-container.row

      each course in data

        div.course-box.box

          h2 !{utility.highlightSearch(course.name, searched)}

          div
            - var cleanCourseName = course.name.replace(/(<([^>]+)>)/gi, '')

            img(loading='lazy' src=course.certificate_image alt=cleanCourseName title=cleanCourseName + ' certificate')

          div.course-wrapper

            span.course-date !{utility.getMonthYear(course.course_date)}

            span.course-links

              a(href=course.certificate_pdf target='_blank' rel='noopener' title="Opening a new window")
                img(loading='lazy' src="https://chriscorchado.com/images/pdfIcon.jpg" height="25" title="View the PDF Certificate" alt="PDF Icon")

            if course.track_image
              span.course-links

                a(href=course.track_image target='_blank' data-featherlight="image" rel='noopener' title="Opening a lightbox")
                  img(loading='lazy' src="https://chriscorchado.com/images/linkedIn-track.png" height="25" title="View the Courses in the Track" alt="Trophy Icon")