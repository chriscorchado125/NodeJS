extends layout

block content

  div.container.row

    each company in data

      div#page-item-count #{count}

      div.company-container.col.shadow

        div.company-name !{utility.highlightSearch(company.name, searchValue)}
        
        div.company-job-title !{utility.highlightSearch(company.job_title, searchValue)}

        div.body-container
          p !{utility.highlightSearch(company.description, searchValue)}

        div.screenshot-container
          img(loading=lazy src=company.screenshots class="company-screenshot")

        div.employment-dates #{utility.getMonthYear(company.start_date)} - #{utility.getMonthYear(company.end_date)}