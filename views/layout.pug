doctype html
html(lang='en')
  head
    title= title
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    
    link(rel='shortcut icon', type="image/x-icon", href='https://chriscorchado.com/images/chrisCorchado.ico')
    link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css')

    if needs_lighbox
      link(rel='stylesheet', href='//cdn.jsdelivr.net/npm/featherlight@1.7.14/release/featherlight.min.css')
      link(rel='stylesheet', href='//cdn.jsdelivr.net/npm/featherlight@1.7.14/release/featherlight.gallery.min.css')

    link(rel='stylesheet', href='/css/chriscorchado.css')

    if page_name == 'home'
      link(rel='stylesheet', href='/css/home.css')

    if page_name == 'company'
      link(rel='stylesheet', href='/css/company.css')
    
    if page_name == 'course'
      link(rel='stylesheet', href='/css/course.css')

    if page_name == 'project'
      link(rel='stylesheet', href='/css/project.css')

    if page_name == 'contact'
      link(rel='stylesheet', href='/css/contact.css')

  body
    - let counter = 2

    a#skip-links.screen-reader(href='#content' tabindex=1 style="position: absolute;left: -10000px;top: auto;width: 1px;height: 1px;overflow: hidden;") Skip Navigation
    
    header(id='navigation')

      nav.navbar.navbar-light.bg-light.fixed-top.navbar-fixed-top.shadow
        div#navbarCollapse.navbar-collapse
          div#navbar-nav.navbar-nav.show
            
            a#logo.navbar-brand(href="index" tabindex=counter++)
              img#logo-image(src="https://chriscorchado.com/images/chriscorchado-initials-logo.png" title="Home" alt="Chris Corchado Logo")
            
            a#companies-link.nav-item.nav-link(href="companies" tabindex=counter++) History
            a#courses-link.nav-item.nav-link(href="courses" tabindex=counter++) Courses
            a#projects-link.nav-item.nav-link(href="projects" tabindex=counter++) Projects
            a#contact-link.nav-item.nav-link(href="contact" tabindex=counter++) Contact

        div#profiles

        div#search-container(role="search")

          span#searchCount
            span#paging-info(aria-label="Record Counts" tabindex=counter++)

          label(for=searchSite) 
            span.screen-reader Search
            input#searchSite.ccBtn(type="text" placeholder="Search items" title="Enter something to search for" aria-label="Search" tabindex=counter++)
          
          label(for=searchBtn) 
            span.screen-reader Clear Search
            button#searchBtn.searchBtn(title="Clear the search" aria-label="Clear Search" tabindex=counter++  role='button') clear          

          - let checkPager = page > 1 || ((count == maxItemsPerPage) && (page > 0))
          if checkPager

            div#pagination

              if page > 1 
                a.pager-navigation(href="#" id="prevLink" title="View the previous page" tabindex=counter++ role='button') Prev
              else
                span.pager-navigation.disabled(title="There is no previous page available" tabindex=counter++  role='button') Prev

              if  ((count == maxItemsPerPage) && (page > 0))
                a.pager-navigation(href="#" id="nextLink" title="View the next page" tabindex=counter++  role='button') Next
              else
                span.pager-navigation.disabled(title="There is no previous page available" tabindex=counter++  role='button') Next


    // CONTENT        
    if count > 0
           
      main.container(role="main")

        h1(id='content' tabindex="12") #{page_title}

        block content

        span#paging(data-first=first data-last=last) 
        span#recordCount #{count}
    else
      if searched
        div#noRecords No matches found for '#{searched}'
      else
        div#noRecords No Records Found

    if needs_lighbox
      script(src='https://code.jquery.com/jquery-3.5.0.min.js')
      script(src='//cdn.jsdelivr.net/npm/featherlight@1.7.14/release/featherlight.min.js')
      script(src='//cdn.jsdelivr.net/npm/featherlight@1.7.14/release/featherlight.gallery.min.js')
      script(src='//cdnjs.cloudflare.com/ajax/libs/detect_swipe/2.1.1/jquery.detect_swipe.min.js')

    script(src='/js/chriscorchado.js')

    footer(id='footer')
      div.site-version(aria-label="Icons of the technology used on this site and link to Github")
        div 
          img(alt="HTML5 Icon" title="This site uses HTML5"  src="https://chriscorchado.com/images/html5.png")

        div 
          img(alt="Sass Icon" title="This site uses Sass"  src="https://chriscorchado.com/images/sass.png")

        div 
          img(alt="TypeScript Icon" title="This site uses TypeScript"  src="https://chriscorchado.com/images/typescript.png")

        div 
          img(alt="nodeJS Icon" title="This site uses nodeJS"  src="https://chriscorchado.com/images/nodejs.png")
        
        div 
          img(alt="Express Icon" title="This site uses Express"  src="https://chriscorchado.com/images/express.png")

        div 
          img(alt="mongoDB Icon" title="This site uses mongoDB"  src="https://chriscorchado.com/images/mongodb.png")
        
        div 
          img(alt="mongoose Icon" title="This site uses mongoose"  src="https://chriscorchado.com/images/mongoose.png")
        
        div 
          img(alt="pugjs Icon" title="This site uses pugjs"  src="https://chriscorchado.com/images/pugjs.png")        

        div
          a(href="https://github.com/chriscorchado125/NodeJS" target="_blank")
            img(alt="Github Icon" title="View the code on GitHub"  src="https://chriscorchado.com/images/github.jpg")
